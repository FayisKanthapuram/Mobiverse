<div class="main-header">
  <div class="header-left">
    <h2>Products Management</h2>
    <p>Manage all mobile products and their variants</p>
  </div>
  <button class="btn btn-primary" id="open-add-modal-btn">
    <i class="fas fa-plus"></i> Add Product
  </button>
</div>

<div class="filter-bar">
  <div class="search-wrapper">
    <i class="fas fa-search"></i>
    <input type="text" placeholder="Search by product name or brand..." id="product-search-input" value="<%= typeof query.search !== 'undefined' ? query.search : '' %>" onkeyup="debounceSearch()" />
  </div>

  <% if (typeof query.search !== 'undefined' && query.search.trim() !== '') { %>
  <button type="button" class="btn-clear" id="clear-search" onclick="clearSearch()">Clear</button>
  <% } %>

  <select name="brand" onchange="applyFilter()" class="filter-select">
    <option value="" <%= !query.brand ?'selected' : '' %>>All Brands</option>
    <% if (brands && brands.length > 0) { %>
    <% brands.forEach(brand => { %>
    <option value="<%= brand._id %>" <%= String(query.brand) === String(brand._id) ? 'selected' : '' %>>
      <%= brand.brandName %>
    </option>
    <% }); %>
    <% } %>
  </select>
  <select name="status" onchange="applyFilter()" class="filter-select">
    <option value="All" <%= !query.status ?'selected' : '' %>>All</option>
    <option value="listed" <%= query.status === 'listed' ? 'selected' : '' %>>Listed</option>
    <option value="unlisted" <%= query.status === 'unlisted' ? 'selected' : '' %>>Unlisted</option>
  </select>
</div>

<div class="table-container">
  <table class="products-table">
    <thead>
      <tr>
        <th>Product Image</th>
        <th>Product Name</th>
        <th>Brand</th>
        <th>Avg Rating</th>
        <th>Price Range</th>
        <th>Total Stock</th>
        <th>Status</th>
        <th>Featured</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (typeof products !== 'undefined' && products.length > 0) { %> <%
      products.forEach(product => { %>
      <tr>
        <td>
          <img src="<%= product.image || '/images/default-product.png' %>" alt="<%= product.name %>" class="product-table-img" />
        </td>
        <td><%= product.name %></td>
        <td><%= product.brandID.brandName %></td>
        <td><%= product.avgRating %></td>
        <%if (product.minPrice ===product.maxPrice) {%>
        <td>â‚¹<%= product.minPrice %></td>
        <% } else { %>
        <td>â‚¹<%= product.minPrice %> - â‚¹<%= product.maxPrice %></td>
        <% } %>
        <td><%= product.totalStock %></td>
        <td>
          <% if (product.isListed) { %>
          <span class="status-badge status-listed" data-product-status data-product-id="<%= product._id %>">Listed</span>
          <% } else { %>
          <span class="status-badge status-unlisted" data-product-status data-product-id="<%= product._id %>">Unlisted</span>
          <% } %>
        </td>
        <td><%= product.isFeatured ? 'Yes' : 'No' %></td>
        <td>
          <div class="action-buttons">
            <button class="btn-action btn-edit" data-product-id="<%= product._id %>">
              <i class="fas fa-pencil-alt"></i> Edit
            </button>
            <% if (product.isListed) { %>
            <button type="submit" class="btn-action btn-unlist" data-product-id="<%= product._id %>" data-product-islisted="<%= product.isListed %>">Unlist</button>
            <% } else { %>
            <button type="submit" class="btn-action btn-list" data-product-id="<%= product._id %>" data-product-islisted="<%= product.isListed %>">List</button>
            <% } %>
          </div>
        </td>
      </tr>
      <% }); %> <% } else { %>
      <tr>
        <td colspan="8" style="text-align: center; padding: 20px">
          No products found.
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>


<%- include('../partials/admin/products/pagination') %>
<%- include('../partials/admin/products/addNewProductModal') %>
<%-include('../partials/admin/products/editProductModal') %>


<!-- Coupons Management Page -->
<div class="page-container">
  <!-- Page Header -->
  <div class="page-header">
    <div>
      <h1>Coupons Management</h1>
      <p class="subtitle">Create and manage discount coupons for your customers.</p>
    </div>
    <div class="header-actions">
      <button class="btn-secondary" onclick="exportCoupons()">
        <i class="bi bi-download"></i>
        Export
      </button>
      <button class="btn-primary" onclick="openAddCouponModal()">
        <i class="bi bi-plus-circle"></i>
        Add New Coupon
      </button>
    </div>
  </div>

  <!-- Analytics Cards -->
  <div class="stats-grid">
    <div class="stat-card stat-blue">
      <div class="stat-icon">
        <i class="bi bi-ticket-perforated"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Total Coupons</div>
        <div class="stat-value"><%= analytics.totalCoupons || 0 %></div>
      </div>
    </div>

    <div class="stat-card stat-green">
      <div class="stat-icon">
        <i class="bi bi-check-circle"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Active Coupons</div>
        <div class="stat-value"><%= analytics.activeCoupons || 0 %></div>
      </div>
    </div>

    <div class="stat-card stat-red">
      <div class="stat-icon">
        <i class="bi bi-clock-history"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Expired Coupons</div>
        <div class="stat-value"><%= analytics.expiredCoupons || 0 %></div>
      </div>
    </div>

    <div class="stat-card stat-purple">
      <div class="stat-icon">
        <i class="bi bi-graph-up"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Total Usage</div>
        <div class="stat-value"><%= analytics.totalUsage || 0 %></div>
      </div>
    </div>

    <div class="stat-card stat-orange">
      <div class="stat-icon">
        <i class="bi bi-currency-rupee"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Total Discount Given</div>
        <div class="stat-value">₹<%= (analytics.totalDiscountGiven || 0).toLocaleString('en-IN') %></div>
      </div>
    </div>
  </div>

  <!-- Filters Section -->
  <div class="filters-container">
    <div class="search-box">
      <i class="bi bi-search"></i>
      <input
        type="text"
        id="searchInput"
        placeholder="Search by code or name..."
        value="<%= searchQuery || '' %>"
        onkeyup="handleSearch()"
      />
      <% if (searchQuery) { %>
      <button class="clear-search-btn" onclick="clearSearch()" title="Clear search">
        <i class="bi bi-x-circle-fill"></i>
      </button>
      <% } %>
    </div>

    <div class="filter-group">
      <label>Type:</label>
      <select id="typeFilter" class="filter-select" onchange="applyFilters()">
        <option value="">All</option>
        <option value="percentage" <%= typeFilter === 'percentage' ? 'selected' : '' %>>Percentage</option>
        <option value="fixed" <%= typeFilter === 'fixed' ? 'selected' : '' %>>Fixed Amount</option>
      </select>
    </div>

    <div class="filter-group">
      <label>Status:</label>
      <select id="statusFilter" class="filter-select" onchange="applyFilters()">
        <option value="">All</option>
        <option value="active" <%= statusFilter === 'active' ? 'selected' : '' %>>Active</option>
        <option value="inactive" <%= statusFilter === 'inactive' ? 'selected' : '' %>>Inactive</option>
        <option value="expired" <%= statusFilter === 'expired' ? 'selected' : '' %>>Expired</option>
      </select>
    </div>

    <div class="filter-group">
      <label>Sort By:</label>
      <select id="sortFilter" class="filter-select" onchange="applyFilters()">
        <option value="recent" <%= sortFilter === 'recent' ? 'selected' : '' %>>Recent</option>
        <option value="oldest" <%= sortFilter === 'oldest' ? 'selected' : '' %>>Oldest</option>
        <option value="usage-high" <%= sortFilter === 'usage-high' ? 'selected' : '' %>>Most Used</option>
        <option value="usage-low" <%= sortFilter === 'usage-low' ? 'selected' : '' %>>Least Used</option>
      </select>
    </div>
  </div>

  <!-- Coupons Table -->
  <div class="table-wrapper">
    <table class="data-table">
      <thead>
        <tr>
          <th>Coupon Code</th>
          <th>Name</th>
          <th>Type</th>
          <th>Discount</th>
          <th>Min Purchase</th>
          <th>Usage</th>
          <th>Valid Until</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (coupons && coupons.length > 0) { %>
          <% coupons.forEach(coupon => { %>
            <tr>
              <td>
                <div class="coupon-code-cell">
                  <strong class="coupon-code"><%= coupon.code %></strong>
                  <button class="btn-copy" onclick="copyCouponCode('<%= coupon.code %>')" title="Copy code">
                    <i class="bi bi-clipboard"></i>
                  </button>
                </div>
              </td>
              <td>
                <div class="coupon-name-cell" title="<%= coupon.description || '' %>">
                  <strong><%= coupon.name %></strong>
                  <% if (coupon.description) { %>
                    <i class="bi bi-info-circle info-icon"></i>
                  <% } %>
                </div>
              </td>
              <td>
                <% 
                  let typeClass = '';
                  let typeText = '';
                  if (coupon.type === 'percentage') {
                    typeClass = 'type-percentage';
                    typeText = 'Percentage';
                  } else if (coupon.type === 'fixed') {
                    typeClass = 'type-fixed';
                    typeText = 'Fixed';
                  } else {
                    typeClass = 'type-shipping';
                    typeText = 'Free Shipping';
                  }
                %>
                <span class="type-badge <%= typeClass %>">
                  <%= typeText %>
                </span>
              </td>
              <td>
                <% if (coupon.type === 'percentage') { %>
                  <strong><%= coupon.discountValue %>%</strong>
                  <% if (coupon.maxDiscount) { %>
                    <div class="meta-text">Max: ₹<%= coupon.maxDiscount %></div>
                  <% } %>
                <% } else { %>
                  <strong>₹<%= coupon.discountValue %></strong>
                <% } %>
              </td>
              <td>₹<%= coupon.minPurchaseAmount.toLocaleString('en-IN') %></td>
              <td>
                <div class="usage-cell">
                  <strong><%= coupon.currentUsageCount || 0 %></strong>
                  <% if (coupon.totalUsageLimit > 0) { %>
                    / <%= coupon.totalUsageLimit %>
                    <div class="usage-progress">
                      <div class="usage-bar" style="width: <%= Math.min((coupon.currentUsageCount / coupon.totalUsageLimit) * 100, 100) %>%"></div>
                    </div>
                  <% } else { %>
                    <span class="meta-text">/ Unlimited</span>
                  <% } %>
                </div>
              </td>
              <td><%= new Date(coupon.endDate).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
              <td>
                <% 
                  let statusClass = '';
                  let statusText = '';
                  const now = new Date();
                  const end = new Date(coupon.endDate);
                  
                  if (!coupon.isActive) {
                    statusClass = 'status-blocked';
                    statusText = 'Inactive';
                  } else if (now > end) {
                    statusClass = 'status-blocked';
                    statusText = 'Expired';
                  } else if (coupon.totalUsageLimit > 0 && coupon.currentUsageCount >= coupon.totalUsageLimit) {
                    statusClass = 'status-blocked';
                    statusText = 'Used Up';
                  } else {
                    statusClass = 'status-active';
                    statusText = 'Active';
                  }
                %>
                <span class="status-badge <%= statusClass %>">
                  <%= statusText %>
                </span>
              </td>
              <td>
                <div class="action-buttons">
                  <button class="btn-icon btn-view" onclick="viewCouponDetails('<%= coupon._id %>')" title="View Details">
                    <i class="bi bi-eye"></i>
                  </button>
                  <button class="btn-icon btn-edit" onclick="editCoupon('<%= coupon._id %>')" title="Edit">
                    <i class="bi bi-pencil"></i>
                  </button>
                  <button class="btn-icon <%= coupon.isActive ? 'btn-block' : 'btn-activate' %>" 
                          onclick="toggleCouponStatus('<%= coupon._id %>', <%= coupon.isActive %>)" 
                          title="<%= coupon.isActive ? 'Deactivate' : 'Activate' %>">
                    <i class="bi <%= coupon.isActive ? 'bi-x-circle' : 'bi-check-circle' %>"></i>
                  </button>
                  <button class="btn-icon btn-delete" onclick="deleteCoupon('<%= coupon._id %>')" title="Delete">
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="9" class="no-data">
              <div class="empty-state">
                <i class="bi bi-ticket-perforated"></i>
                <p>No coupons found</p>
                <button class="btn-primary" onclick="openAddCouponModal()" style="margin-top: 16px;">
                  <i class="bi bi-plus-circle"></i>
                  Create Your First Coupon
                </button>
              </div>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="pagination-container">
    <div class="pagination-info">
      <% if (coupons && coupons.length > 0) { %>
        <% const startItem = (currentPage - 1) * limit + 1; %>
        <% const endItem = Math.min((currentPage - 1) * limit + coupons.length, totalCoupons); %>
        Showing <%= startItem %> to <%= endItem %> of <%= totalCoupons %> results
      <% } else { %>
        No results found
      <% } %>
    </div>

    <div class="pagination-controls">
      <% if(currentPage > 1) { %>
        <button class="page-btn" onclick="changePage(<%= currentPage - 1 %>)">
          <i class="bi bi-chevron-left"></i>
        </button>
      <% } else { %>
        <button class="page-btn" disabled>
          <i class="bi bi-chevron-left"></i>
        </button>
      <% } %>
      
      <% 
        const maxPagesToShow = 5;
        let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
        let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
        
        if (endPage - startPage < maxPagesToShow - 1) {
          startPage = Math.max(1, endPage - maxPagesToShow + 1);
        }
      %>
      
      <% if (startPage > 1) { %>
        <button class="page-btn" onclick="changePage(1)">1</button>
        <% if (startPage > 2) { %>
          <span class="pagination-dots">...</span>
        <% } %>
      <% } %>
      
      <% for(let i = startPage; i <= endPage; i++) { %>
        <button 
          class="page-btn <%= currentPage === i ? 'active' : '' %>" 
          onclick="changePage(<%= i %>)"
        >
          <%= i %>
        </button>
      <% } %>
      
      <% if (endPage < totalPages) { %>
        <% if (endPage < totalPages - 1) { %>
          <span class="pagination-dots">...</span>
        <% } %>
        <button class="page-btn" onclick="changePage(<%= totalPages %>)"><%= totalPages %></button>
      <% } %>
      
      <% if(currentPage < totalPages) { %>
        <button class="page-btn" onclick="changePage(<%= currentPage + 1 %>)">
          <i class="bi bi-chevron-right"></i>
        </button>
      <% } else { %>
        <button class="page-btn" disabled>
          <i class="bi bi-chevron-right"></i>
        </button>
      <% } %>
    </div>
  </div>
</div>

<!-- Add/Edit Coupon Modal -->
<div id="couponModal" class="modal">
  <div class="modal-content modal-large">
    <div class="modal-header">
      <h2 id="modalTitle">Add New Coupon</h2>
      <button class="modal-close" onclick="closeCouponModal()">
        <i class="bi bi-x-lg"></i>
      </button>
    </div>
    <form id="couponForm">
      <input type="hidden" id="couponId" name="couponId">
      
      <!-- Basic Info -->
      <div class="form-section">
        <h3 class="section-title">Basic Information</h3>
        
        <div class="form-row">
          <div class="form-group">
            <label for="code">Coupon Code <span class="required">*</span></label>
            <input 
              type="text" 
              id="code" 
              name="code" 
              placeholder="e.g., SAVE20" 
              required
              maxlength="20"
              style="text-transform: uppercase"
            >
            <small class="form-help">Alphanumeric only, auto-converts to uppercase</small>
          </div>

          <div class="form-group">
            <label for="name">Coupon Name <span class="required">*</span></label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              placeholder="e.g., Summer Sale Discount" 
              required
            >
          </div>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea 
            id="description" 
            name="description" 
            rows="2" 
            placeholder="Describe the purpose of this coupon..."
          ></textarea>
        </div>
      </div>

      <!-- Discount Settings -->
      <div class="form-section">
        <h3 class="section-title">Discount Settings</h3>
        
        <div class="form-row">
          <div class="form-group">
            <label for="type">Discount Type <span class="required">*</span></label>
            <select id="type" name="type" required onchange="handleTypeChange()">
              <option value="">Select Type</option>
              <option value="percentage">Percentage (%)</option>
              <option value="fixed">Fixed Amount (₹)</option>
            </select>
          </div>

          <div class="form-group" id="discountValueGroup">
            <label for="discountValue">Discount Value <span class="required">*</span></label>
            <div class="input-with-icon">
              <input 
                type="number" 
                id="discountValue" 
                name="discountValue" 
                placeholder="Enter value"
                min="1"
              >
              <span class="input-icon" id="discountIcon">%</span>
            </div>
            <small class="form-help" id="discountHelp">Enter discount value</small>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group" id="maxDiscountGroup" style="display: none;">
            <label for="maxDiscount">Maximum Discount (₹)</label>
            <input 
              type="number" 
              id="maxDiscount" 
              name="maxDiscount" 
              placeholder="e.g., 1000"
              min="1"
            >
            <small class="form-help">Cap the maximum discount amount</small>
          </div>

          <div class="form-group">
            <label for="minPurchaseAmount">Minimum Purchase Amount (₹) <span class="required">*</span></label>
            <input 
              type="number" 
              id="minPurchaseAmount" 
              name="minPurchaseAmount" 
              placeholder="e.g., 500"
              min="0"
              required
            >
          </div>
        </div>
      </div>

      <!-- Usage Limits -->
      <div class="form-section">
        <h3 class="section-title">Usage Limits</h3>
        
        <div class="form-row">
          <div class="form-group">
            <label for="usageLimitPerUser">Usage Limit per User</label>
            <div class="input-with-checkbox">
              <input 
                type="number" 
                id="usageLimitPerUser" 
                name="usageLimitPerUser" 
                placeholder="e.g., 3"
                min="0"
                value="1"
              >
              <label class="checkbox-label">
                <input type="checkbox" id="unlimitedPerUser" onchange="toggleUnlimitedPerUser()">
                <span>Unlimited</span>
              </label>
            </div>
            <small class="form-help">How many times one user can use this coupon (0 = unlimited)</small>
          </div>

          <div class="form-group">
            <label for="totalUsageLimit">Total Usage Limit</label>
            <div class="input-with-checkbox">
              <input 
                type="number" 
                id="totalUsageLimit" 
                name="totalUsageLimit" 
                placeholder="e.g., 100"
                min="0"
                value="100"
              >
              <label class="checkbox-label">
                <input type="checkbox" id="unlimitedTotal" onchange="toggleUnlimitedTotal()">
                <span>Unlimited</span>
              </label>
            </div>
            <small class="form-help">Total times this coupon can be used across all users</small>
          </div>
        </div>
      </div>

      <!-- User Eligibility -->
      <div class="form-section">
        <h3 class="section-title">User Eligibility</h3>
        
        <div class="form-group">
          <label for="userEligibility">Who can use this coupon? <span class="required">*</span></label>
          <select id="userEligibility" name="userEligibility" required onchange="handleEligibilityChange()">
            <option value="all">All Users</option>
            <option value="new_users">New Users Only</option>
            <option value="specific">Specific Users</option>
          </select>
        </div>

        <div id="specificUsersSection" class="form-group" style="display: none;">
          <label for="userSearch">Select Users <span class="required">*</span></label>
          <div class="search-select-wrapper">
            <input 
              type="text" 
              id="userSearch" 
              placeholder="Search users by name or email..." 
              autocomplete="off"
              oninput="searchUsers(this.value)"
            >
            <i class="bi bi-search search-icon"></i>
          </div>
          <div id="userSearchResults" class="search-results"></div>
          
          <div id="selectedUsersContainer" class="selected-users-container" style="display: none;">
            <div class="selected-users-header">
              <span class="selected-count">0 users selected</span>
              <button type="button" class="btn-link" onclick="clearAllUsers()">Clear All</button>
            </div>
            <div id="selectedUsersList" class="selected-users-list"></div>
          </div>
          
          <input type="hidden" id="specificUsers" name="specificUsers">
        </div>
      </div>

      <!-- Validity Period -->
      <div class="form-section">
        <h3 class="section-title">Validity Period</h3>
        
        <div class="form-row">
          <div class="form-group">
            <label for="startDate">Start Date <span class="required">*</span></label>
            <input type="date" id="startDate" name="startDate" required>
          </div>

          <div class="form-group">
            <label for="endDate">End Date <span class="required">*</span></label>
            <input type="date" id="endDate" name="endDate" required>
          </div>
        </div>

        <div class="form-group">
          <label for="isActive">Status</label>
          <select id="isActive" name="isActive">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
          </select>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn-secondary" onclick="closeCouponModal()">Cancel</button>
        <button type="submit" class="btn-primary" id="submitBtn">
          <i class="bi bi-check-circle"></i>
          <span id="submitBtnText">Create Coupon</span>
        </button>
      </div>
    </form>
  </div>
</div>

<!-- View Details Modal -->
<div id="viewModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Coupon Details</h2>
      <button class="modal-close" onclick="closeViewModal()">
        <i class="bi bi-x-lg"></i>
      </button>
    </div>
    <div id="viewModalContent" class="view-details-content">
      <!-- Content will be loaded dynamically -->
    </div>
  </div>
</div>
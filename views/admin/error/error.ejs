<main class="flex items-center justify-center min-h-[70vh] px-4">
  <div class="bg-white border border-gray-200 shadow-lg rounded-2xl p-10 max-w-lg w-full text-center">

    <h1 class="text-6xl font-extrabold text-red-600">500</h1>
    <h2 class="text-2xl font-semibold mt-2 text-gray-800">Admin Error</h2>

    <p class="text-gray-500 mt-3">
      <%= message || "An unexpected server error occurred in the admin panel." %>
    </p>

    <a href="/admin/dashboard"
      class="mt-6 inline-block bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-all">

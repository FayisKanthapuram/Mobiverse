<!-- Offers Management Page -->
<div class="page-container">
  <!-- Page Header -->
  <div class="page-header">
    <div>
      <h1>Offers Management</h1>
      <p class="subtitle">Create and manage product and brand offers for your marketplace.</p>
    </div>
    <button class="btn-primary" onclick="openAddOfferModal()">
      <i class="bi bi-plus-circle"></i>
      Add New Offer
    </button>
  </div>

  <!-- Analytics Cards -->
  <div class="stats-grid">
    <div class="stat-card stat-blue">
      <div class="stat-icon">
        <i class="bi bi-percent"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Total Offers</div>
        <div class="stat-value"><%= analytics.totalOffers || 0 %></div>
      </div>
    </div>

    <div class="stat-card stat-green">
      <div class="stat-icon">
        <i class="bi bi-check-circle"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Active Offers</div>
        <div class="stat-value"><%= analytics.activeOffers || 0 %></div>
      </div>
    </div>

    <div class="stat-card stat-purple">
      <div class="stat-icon">
        <i class="bi bi-box-seam"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Product Offers</div>
        <div class="stat-value"><%= analytics.productOffers || 0 %></div>
      </div>
    </div>

    <div class="stat-card stat-orange">
      <div class="stat-icon">
        <i class="bi bi-tag"></i>
      </div>
      <div class="stat-content">
        <div class="stat-label">Brand Offers</div>
        <div class="stat-value"><%= analytics.brandOffers || 0 %></div>
      </div>
    </div>
  </div>

  <!-- Tabs Navigation -->
  <div class="tabs-container">
    <button class="tab-btn <%= !offerType || offerType === 'product' ? 'active' : '' %>" onclick="switchTab('product')">
      <i class="bi bi-box-seam"></i> Product Offers
    </button>
    <button class="tab-btn <%= offerType === 'brand' ? 'active' : '' %>" onclick="switchTab('brand')">
      <i class="bi bi-tag"></i> Brand Offers
    </button>
  </div>

  <!-- Filters Section -->
  <div class="filters-container">
    <div class="search-box">
      <i class="bi bi-search"></i>
      <input
        type="text"
        id="searchInput"
        placeholder="Search offers..."
        value="<%= searchQuery || '' %>"
        onkeyup="handleSearch()"
      />
      <% if (searchQuery) { %>
      <button class="clear-search-btn" onclick="clearSearch()" title="Clear search">
        <i class="bi bi-x-circle-fill"></i>
      </button>
      <% } %>
    </div>

    <div class="filter-group">
      <label>Status:</label>
      <select id="statusFilter" class="filter-select" onchange="applyFilters()">
        <option value="">All</option>
        <option value="active" <%= statusFilter === 'active' ? 'selected' : '' %>>Active</option>
        <option value="inactive" <%= statusFilter === 'inactive' ? 'selected' : '' %>>Inactive</option>
        <option value="expired" <%= statusFilter === 'expired' ? 'selected' : '' %>>Expired</option>
      </select>
    </div>

    <div class="filter-group">
      <label>Sort By:</label>
      <select id="sortFilter" class="filter-select" onchange="applyFilters()">
        <option value="recent" <%= sortFilter === 'recent' ? 'selected' : '' %>>Recent</option>
        <option value="oldest" <%= sortFilter === 'oldest' ? 'selected' : '' %>>Oldest</option>
        <option value="discount-high" <%= sortFilter === 'discount-high' ? 'selected' : '' %>>Discount (High to Low)</option>
        <option value="discount-low" <%= sortFilter === 'discount-low' ? 'selected' : '' %>>Discount (Low to High)</option>
      </select>
    </div>
  </div>

  <!-- Offers Table -->
  <div class="table-wrapper">
    <table class="data-table">
      <thead>
        <tr>
          <th><%= offerType === 'brand' ? 'Brand' : 'Product' %></th>
          <th>Offer Name</th>
          <th>Discount</th>
          <th>Valid From</th>
          <th>Valid Until</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (offers && offers.length > 0) { %>
          <% offers.forEach(offer => { %>
            <tr>
              <td>
                <div class="offer-item-info">
                  <% if (offerType === 'brand') { %>
                    <div class="brand-logo-small">
                      <img src="<%= offer.brandID?.logo || '/images/placeholder-brand.png' %>" alt="<%= offer.brandID?.brandName %>">
                    </div>
                    <strong><%= offer.brandID?.brandName || 'N/A' %></strong>
                  <% } else { %>
                    <% if (Array.isArray(offer.productID) && offer.productID.length > 0) { %>
                      <div class="product-image-small">
                        <img src="<%= offer.productID[0]?.image || '/images/placeholder-product.png' %>" alt="<%= offer.productID[0]?.name %>">
                      </div>
                      <div>
                        <strong><%= offer.productID[0]?.name || 'N/A' %></strong>
                        <% if (offer.productID.length > 1) { %>
                          <div class="product-brand-small">+<%= offer.productID.length - 1 %> more product<%= offer.productID.length > 2 ? 's' : '' %></div>
                        <% } else { %>
                          <div class="product-brand-small"><%= offer.productID[0]?.brandID?.brandName || '' %></div>
                        <% } %>
                      </div>
                    <% } else { %>
                      <div class="product-image-small">
                        <img src="/images/placeholder-product.png" alt="N/A">
                      </div>
                      <strong>N/A</strong>
                    <% } %>
                  <% } %>
                </div>
              </td>
              <td><strong><%= offer.offerName %></strong></td>
              <td>
                <span class="discount-badge">
                  <%= offer.discountPercentage %>% OFF
                </span>
              </td>
              <td><%= new Date(offer.startDate).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
              <td><%= new Date(offer.endDate).toLocaleDateString('en-IN', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
              <td>
                <% 
                  let statusClass = '';
                  let statusText = '';
                  const now = new Date();
                  const start = new Date(offer.startDate);
                  const end = new Date(offer.endDate);
                  
                  if (!offer.isActive) {
                    statusClass = 'status-blocked';
                    statusText = 'Inactive';
                  } else if (now > end) {
                    statusClass = 'status-blocked';
                    statusText = 'Expired';
                  } else if (now < start) {
                    statusClass = 'status-pending';
                    statusText = 'Scheduled';
                  } else {
                    statusClass = 'status-active';
                    statusText = 'Active';
                  }
                %>
                <span class="status-badge <%= statusClass %>">
                  <%= statusText %>
                </span>
              </td>
              <td>
                <div class="action-buttons">
                  <button class="btn-icon btn-edit" onclick="editOffer('<%= offer._id %>')" title="Edit">
                    <i class="bi bi-pencil"></i>
                  </button>
                  <button class="btn-icon <%= offer.isActive ? 'btn-block' : 'btn-activate' %>" 
                          onclick="toggleOfferStatus('<%= offer._id %>', <%= offer.isActive %>)" 
                          title="<%= offer.isActive ? 'Deactivate' : 'Activate' %>">
                    <i class="bi <%= offer.isActive ? 'bi-x-circle' : 'bi-check-circle' %>"></i>
                  </button>
                  <button class="btn-icon btn-delete" onclick="deleteOffer('<%= offer._id %>')" title="Delete">
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="7" class="no-data">
              <div class="empty-state">
                <i class="bi bi-percent"></i>
                <p>No offers found</p>
                <button class="btn-primary" onclick="openAddOfferModal()" style="margin-top: 16px;">
                  <i class="bi bi-plus-circle"></i>
                  Create Your First Offer
                </button>
              </div>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="pagination-container">
    <div class="pagination-info">
      <% if (offers && offers.length > 0) { %>
        <% const startItem = (currentPage - 1) * limit + 1; %>
        <% const endItem = Math.min((currentPage - 1) * limit + offers.length, totalOffers); %>
        Showing <%= startItem %> to <%= endItem %> of <%= totalOffers %> results
      <% } else { %>
        No results found
      <% } %>
    </div>

    <div class="pagination-controls">
      <% if(currentPage > 1) { %>
        <button class="page-btn" onclick="changePage(<%= currentPage - 1 %>)">
          <i class="bi bi-chevron-left"></i>
        </button>
      <% } else { %>
        <button class="page-btn" disabled>
          <i class="bi bi-chevron-left"></i>
        </button>
      <% } %>
      
      <% 
        const maxPagesToShow = 5;
        let startPage = Math.max(1, currentPage - Math.floor(maxPagesToShow / 2));
        let endPage = Math.min(totalPages, startPage + maxPagesToShow - 1);
        
        if (endPage - startPage < maxPagesToShow - 1) {
          startPage = Math.max(1, endPage - maxPagesToShow + 1);
        }
      %>
      
      <% if (startPage > 1) { %>
        <button class="page-btn" onclick="changePage(1)">1</button>
        <% if (startPage > 2) { %>
          <span class="pagination-dots">...</span>
        <% } %>
      <% } %>
      
      <% for(let i = startPage; i <= endPage; i++) { %>
        <button 
          class="page-btn <%= currentPage === i ? 'active' : '' %>" 
          onclick="changePage(<%= i %>)"
        >
          <%= i %>
        </button>
      <% } %>
      
      <% if (endPage < totalPages) { %>
        <% if (endPage < totalPages - 1) { %>
          <span class="pagination-dots">...</span>
        <% } %>
        <button class="page-btn" onclick="changePage(<%= totalPages %>)"><%= totalPages %></button>
      <% } %>
      
      <% if(currentPage < totalPages) { %>
        <button class="page-btn" onclick="changePage(<%= currentPage + 1 %>)">
          <i class="bi bi-chevron-right"></i>
        </button>
      <% } else { %>
        <button class="page-btn" disabled>
          <i class="bi bi-chevron-right"></i>
        </button>
      <% } %>
    </div>
  </div>
</div>

<!-- Add/Edit Offer Modal -->
<div id="offerModal" class="modal">
  <div class="modal-content modal-large">
    <div class="modal-header">
      <h2 id="modalTitle">Add New Offer</h2>
      <button class="modal-close" onclick="closeOfferModal()">
        <i class="bi bi-x-lg"></i>
      </button>
    </div>
    <form id="offerForm">
      <input type="hidden" id="offerId" name="offerId">
      
      <div class="form-row">
        <div class="form-group">
          <label for="offerType">Offer Type <span class="required">*</span></label>
          <select id="offerTypeSelect" name="offerType" required onchange="handleOfferTypeChange()">
            <option value="">Select Offer Type</option>
            <option value="product">Product Offer</option>
            <option value="brand">Brand Offer</option>
          </select>
        </div>

        <div class="form-group">
          <label for="offerName">Offer Name <span class="required">*</span></label>
          <input type="text" id="offerName" name="offerName" placeholder="e.g., Summer Sale 2025" required>
        </div>
      </div>

      <!-- Product Selection (shown when product offer is selected) -->
      <div id="productSelectionSection" class="form-section" style="display: none;">
        <div class="form-group">
          <label for="productSearch">Select Products <span class="required">*</span></label>
          <div class="search-select-wrapper">
            <input 
              type="text" 
              id="productSearch" 
              placeholder="Search and add products..." 
              autocomplete="off"
              oninput="searchProducts(this.value)"
            >
            <i class="bi bi-search search-icon"></i>
          </div>
          <div id="productSearchResults" class="search-results"></div>
          
          <!-- Selected Products Display -->
          <div id="selectedProductsContainer" class="selected-products-container" style="display: none;">
            <div class="selected-products-header">
              <span class="selected-count">0 products selected</span>
              <button type="button" class="btn-link" onclick="clearAllProducts()">Clear All</button>
            </div>
            <div id="selectedProductsList" class="selected-products-list"></div>
          </div>
          
          <input type="hidden" id="productIDs" name="productIDs">
        </div>
      </div>

      <!-- Brand Selection (shown when brand offer is selected) -->
      <div id="brandSelectionSection" class="form-section" style="display: none;">
        <div class="form-group">
          <label for="brandID">Select Brand <span class="required">*</span></label>
          <select id="brandID" name="brandID">
            <option value="">Choose a brand</option>
            <% if (typeof brands !== 'undefined' && brands) { %>
              <% brands.forEach(brand => { %>
                <option value="<%= brand._id %>"><%= brand.brandName %></option>
              <% }); %>
            <% } %>
          </select>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="discountPercentage">Discount Percentage <span class="required">*</span></label>
          <div class="input-with-icon">
            <input 
              type="number" 
              id="discountPercentage" 
              name="discountPercentage" 
              placeholder="e.g., 20" 
              min="1" 
              max="90" 
              required
            >
            <span class="input-icon">%</span>
          </div>
          <small class="form-help">Enter discount between 1% and 90%</small>
        </div>

        <div class="form-group">
          <label for="isActive">Status</label>
          <select id="isActive" name="isActive">
            <option value="true">Active</option>
            <option value="false">Inactive</option>
          </select>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="startDate">Start Date <span class="required">*</span></label>
          <input type="date" id="startDate" name="startDate" required>
        </div>

        <div class="form-group">
          <label for="endDate">End Date <span class="required">*</span></label>
          <input type="date" id="endDate" name="endDate" required>
        </div>
      </div>

      <div class="form-group">
        <label for="description">Description (Optional)</label>
        <textarea 
          id="description" 
          name="description" 
          rows="3" 
          placeholder="Add a description for this offer..."
        ></textarea>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn-secondary" onclick="closeOfferModal()">Cancel</button>
        <button type="submit" class="btn-primary" id="submitBtn">
          <i class="bi bi-check-circle"></i>
          <span id="submitBtnText">Create Offer</span>
        </button>
      </div>
    </form>
  </div>
</div>
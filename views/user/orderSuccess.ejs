<div class="min-h-screen bg-gray-50 py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      
      <!-- Success Animation -->
      <div class="text-center mb-8">
        <div class="inline-block">
          <div class="w-32 h-32 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6 animate-bounce">
            <i class="bi bi-check-circle-fill text-6xl text-green-600"></i>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-gray-900 mb-3">Order Placed Successfully!</h1>
        <p class="text-lg text-gray-600">Thank you for your purchase</p>
      </div>

      <!-- Order Details Card -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8 mb-6">
        <div class="border-b border-gray-200 pb-6 mb-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h2 class="text-sm text-gray-600 mb-1">Order ID</h2>
              <p class="text-2xl font-bold text-gray-900">#<%= order.orderId || order._id %></p>
            </div>
            <div class="text-right">
              <h2 class="text-sm text-gray-600 mb-1">Order Date</h2>
              <p class="text-lg font-semibold text-gray-900">
                <%= new Date(order.createdAt).toLocaleDateString('en-IN', { 
                  day: 'numeric', 
                  month: 'short', 
                  year: 'numeric' 
                }) %>
              </p>
            </div>
          </div>

          <div class="flex items-center gap-2 px-4 py-3 bg-blue-50 rounded-lg">
            <i class="bi bi-info-circle text-blue-600"></i>
            <p class="text-sm text-blue-700">
              Your order is being processed. You'll receive a confirmation email shortly.
            </p>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Order Summary</h3>
          
          <div class="space-y-3">
            <div class="flex justify-between text-gray-700">
              <span>Subtotal</span>
              <span class="font-semibold">₹<%= order.subtotal?.toLocaleString('en-IN') %></span>
            </div>

            <% if (order.discount > 0) { %>
              <div class="flex justify-between text-green-600">
                <span>Discount</span>
                <span class="font-semibold">-₹<%= order.discount?.toLocaleString('en-IN') %></span>
              </div>
            <% } %>

            <div class="flex justify-between text-gray-700">
              <span>Delivery Charges</span>
              <% if (order.deliveryCharge === 0) { %>
                <span class="font-semibold text-green-600">FREE</span>
              <% } else { %>
                <span class="font-semibold">₹<%= order.deliveryCharge?.toLocaleString('en-IN') %></span>
              <% } %>
            </div>

            <% if (order.tax > 0) { %>
              <div class="flex justify-between text-gray-700">
                <span>Tax</span>
                <span class="font-semibold">₹<%= order.tax?.toLocaleString('en-IN') %></span>
              </div>
            <% } %>

            <div class="pt-3 border-t border-gray-200">
              <div class="flex justify-between text-gray-900">
                <span class="text-xl font-bold">Total Amount</span>
                <span class="text-2xl font-bold text-green-600">₹<%= order.finalAmount?.toLocaleString('en-IN') %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Method -->
        <div class="border-t border-gray-200 pt-6 mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Payment Method</h3>
          <div class="flex items-center gap-3">
            <% if (order.paymentMethod === 'razorpay') { %>
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-credit-card-2-front text-2xl text-blue-600"></i>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Online Payment</p>
                <p class="text-sm text-gray-600">Paid via Razorpay</p>
              </div>
              <span class="ml-auto px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded">Paid</span>
            <% } else if (order.paymentMethod === 'wallet') { %>
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-wallet2 text-2xl text-purple-600"></i>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Wallet</p>
                <p class="text-sm text-gray-600">Paid from wallet balance</p>
              </div>
              <span class="ml-auto px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded">Paid</span>
            <% } else if (order.paymentMethod === 'cod') { %>
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-cash-coin text-2xl text-orange-600"></i>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Cash on Delivery</p>
                <p class="text-sm text-gray-600">Pay when you receive</p>
              </div>
              <span class="ml-auto px-3 py-1 bg-yellow-100 text-yellow-700 text-sm font-semibold rounded">Pending</span>
            <% } %>
          </div>
        </div>

        <!-- Shipping Address -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Shipping Address</h3>
          <div class="flex items-start gap-3">
            <i class="bi bi-geo-alt-fill text-xl text-blue-600 mt-1"></i>
            <div>
              <p class="font-semibold text-gray-900"><%= order.shippingAddress.fullName %></p>
              <p class="text-gray-600 mt-1">
                <%= order.shippingAddress.address1 %><% if (order.shippingAddress.address2) { %>, <%= order.shippingAddress.address2 %><% } %><br>
                <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %><br>
                India
              </p>
              <p class="text-gray-700 mt-2">
                <i class="bi bi-telephone"></i> <%= order.shippingAddress.phone %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Order Items -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8 mb-6">
        <h3 class="text-lg font-bold text-gray-900 mb-6">Order Items (<%= order.orderedItems?.length %>)</h3>
        
        <div class="space-y-4">
          <% order.orderedItems.forEach(function(item) { %>
            <div class="flex gap-4 pb-4 border-b border-gray-100 last:border-0 last:pb-0">
              <div class="w-24 h-24 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                <img 
                  src="<%= item.variantId.images[0] %>" 
                  alt="<%= item.productId.name %>"
                  class="w-full h-full object-contain">
              </div>
              <div class="flex-1 min-w-0">
                <h4 class="font-semibold text-gray-900 mb-1"><%= item.productId.name %></h4>
                <div class="flex flex-wrap gap-1.5 mb-2">
                  <% if (item.variantId.colour) { %>
                    <span class="text-xs px-2 py-0.5 bg-gray-100 text-gray-600 rounded">
                      <%= item.variantId.colour %>
                    </span>
                  <% } %>
                  <% if (item.variantId.ram) { %>
                    <span class="text-xs px-2 py-0.5 bg-gray-100 text-gray-600 rounded">
                      <%= item.variantId.ram %>
                    </span>
                  <% } %>
                  <% if (item.variantId.storage) { %>
                    <span class="text-xs px-2 py-0.5 bg-gray-100 text-gray-600 rounded">
                      <%= item.variantId.storage %>
                    </span>
                  <% } %>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600">Qty: <%= item.quantity %></span>
                  <span class="font-bold text-gray-900">₹<%= (item.price * item.quantity)?.toLocaleString('en-IN') %></span>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex gap-4">
        <a 
          href="/orders" 
          class="flex-1 text-center px-6 py-4 bg-gradient-to-r from-blue-600 to-blue-500 text-white font-bold rounded-xl shadow-md hover:from-blue-700 hover:to-blue-600 transition-all">
          <i class="bi bi-box-seam"></i> View My Orders
        </a>
        <a 
          href="/shop" 
          class="flex-1 text-center px-6 py-4 bg-gray-100 text-gray-700 font-bold rounded-xl hover:bg-gray-200 transition-colors">
          <i class="bi bi-shop"></i> Continue Shopping
        </a>
      </div>

      <!-- Email Confirmation Notice -->
      <div class="mt-8 text-center">
        <p class="text-gray-600">
          <i class="bi bi-envelope"></i> A confirmation email has been sent to <strong><%= user.email %></strong>
        </p>
      </div>
    </div>
  </div>
</div>

<style>
@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
}

.animate-bounce {
  animation: bounce 1s ease-in-out 2;
}
</style>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4">
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/order/details/<%= order._id %>" class="text-blue-600 hover:text-blue-700 font-semibold">
        <i class="bi bi-arrow-left"></i> Back to Order Details
      </a>
    </div>

    <div class="max-w-4xl mx-auto">
      <!-- Order Header -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
        <div class="flex flex-wrap justify-between items-center gap-4">
          <div>
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Track Order #<%= order.orderId %></h1>
            <p class="text-gray-600">
              <%= order.orderedItems.length %> item<%= order.orderedItems.length > 1 ? 's' : '' %> • 
              ₹<%= order.finalAmount.toLocaleString('en-IN') %>
            </p>
          </div>
          <span class="px-4 py-2 rounded-full text-sm font-semibold <%= getStatusClass(order.orderStatus) %>">
            <%= order.orderStatus %>
          </span>
        </div>
      </div>

      <!-- Tracking Timeline -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-6">Order Timeline</h2>

        <div class="relative">
          <!-- Timeline Line -->
          <div class="absolute left-6 top-6 bottom-6 w-0.5 bg-gray-200"></div>
          <div class="absolute left-6 top-6 w-0.5 bg-blue-600" style="height: <%= getProgressHeight(order.orderStatus) %>%"></div>

          <!-- Timeline Items -->
          <div class="space-y-8 relative">
            
            <!-- Order Placed -->
            <div class="flex gap-4">
              <div class="relative z-10">
                <div class="w-12 h-12 rounded-full bg-blue-600 flex items-center justify-center text-white">
                  <i class="bi bi-check-lg text-xl"></i>
                </div>
              </div>
              <div class="flex-1 pt-2">
                <h3 class="font-bold text-gray-900">Order Placed</h3>
                <p class="text-sm text-gray-600">Your order has been placed successfully</p>
                <p class="text-xs text-gray-500 mt-1">
                  <%= new Date(order.createdAt).toLocaleString('en-IN', { 
                    day: 'numeric', month: 'short', year: 'numeric', 
                    hour: '2-digit', minute: '2-digit' 
                  }) %>
                </p>
              </div>
            </div>

            <!-- Order Confirmed -->
            <div class="flex gap-4">
              <div class="relative z-10">
                <div class="w-12 h-12 rounded-full <%= ['Confirmed', 'Processing', 'Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'bg-blue-600' : 'bg-gray-200' %> flex items-center justify-center text-white">
                  <% if (['Confirmed', 'Processing', 'Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus)) { %>
                    <i class="bi bi-check-lg text-xl"></i>
                  <% } else { %>
                    <i class="bi bi-circle text-gray-400"></i>
                  <% } %>
                </div>
              </div>
              <div class="flex-1 pt-2">
                <h3 class="font-bold <%= ['Confirmed', 'Processing', 'Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'text-gray-900' : 'text-gray-400' %>">
                  Order Confirmed
                </h3>
                <p class="text-sm text-gray-600">Your order has been confirmed</p>
                <% if (order.statusTimeline?.confirmedAt) { %>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= new Date(order.statusTimeline.confirmedAt).toLocaleString('en-IN', { 
                      day: 'numeric', month: 'short', year: 'numeric', 
                      hour: '2-digit', minute: '2-digit' 
                    }) %>
                  </p>
                <% } %>
              </div>
            </div>

            <!-- Order Processing -->
            <div class="flex gap-4">
              <div class="relative z-10">
                <div class="w-12 h-12 rounded-full <%= ['Processing', 'Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'bg-blue-600' : 'bg-gray-200' %> flex items-center justify-center text-white">
                  <% if (['Processing', 'Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus)) { %>
                    <i class="bi bi-check-lg text-xl"></i>
                  <% } else { %>
                    <i class="bi bi-circle text-gray-400"></i>
                  <% } %>
                </div>
              </div>
              <div class="flex-1 pt-2">
                <h3 class="font-bold <%= ['Processing', 'Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'text-gray-900' : 'text-gray-400' %>">
                  Processing
                </h3>
                <p class="text-sm text-gray-600">We're preparing your items</p>
                <% if (order.statusTimeline?.processedAt) { %>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= new Date(order.statusTimeline.processedAt).toLocaleString('en-IN', { 
                      day: 'numeric', month: 'short', year: 'numeric', 
                      hour: '2-digit', minute: '2-digit' 
                    }) %>
                  </p>
                <% } %>
              </div>
            </div>

            <!-- Shipped -->
            <div class="flex gap-4">
              <div class="relative z-10">
                <div class="w-12 h-12 rounded-full <%= ['Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'bg-blue-600' : 'bg-gray-200' %> flex items-center justify-center text-white">
                  <% if (['Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus)) { %>
                    <i class="bi bi-check-lg text-xl"></i>
                  <% } else { %>
                    <i class="bi bi-circle text-gray-400"></i>
                  <% } %>
                </div>
              </div>
              <div class="flex-1 pt-2">
                <h3 class="font-bold <%= ['Shipped', 'Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'text-gray-900' : 'text-gray-400' %>">
                  Shipped
                </h3>
                <p class="text-sm text-gray-600">Your order is on the way</p>
                <% if (order.statusTimeline?.shippedAt) { %>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= new Date(order.statusTimeline.shippedAt).toLocaleString('en-IN', { 
                      day: 'numeric', month: 'short', year: 'numeric', 
                      hour: '2-digit', minute: '2-digit' 
                    }) %>
                  </p>
                <% } %>
              </div>
            </div>

            <!-- Out for Delivery -->
            <div class="flex gap-4">
              <div class="relative z-10">
                <div class="w-12 h-12 rounded-full <%= ['Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'bg-blue-600' : 'bg-gray-200' %> flex items-center justify-center text-white">
                  <% if (['Out for Delivery', 'Delivered'].includes(order.orderStatus)) { %>
                    <i class="bi bi-check-lg text-xl"></i>
                  <% } else { %>
                    <i class="bi bi-circle text-gray-400"></i>
                  <% } %>
                </div>
              </div>
              <div class="flex-1 pt-2">
                <h3 class="font-bold <%= ['Out for Delivery', 'Delivered'].includes(order.orderStatus) ? 'text-gray-900' : 'text-gray-400' %>">
                  Out for Delivery
                </h3>
                <p class="text-sm text-gray-600">Your order is out for delivery</p>
                <% if (order.statusTimeline?.outForDeliveryAt) { %>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= new Date(order.statusTimeline.outForDeliveryAt).toLocaleString('en-IN', { 
                      day: 'numeric', month: 'short', year: 'numeric', 
                      hour: '2-digit', minute: '2-digit' 
                    }) %>
                  </p>
                <% } %>
              </div>
            </div>

            <!-- Delivered -->
            <div class="flex gap-4">
              <div class="relative z-10">
                <div class="w-12 h-12 rounded-full <%= order.orderStatus === 'Delivered' || order.orderStatus === 'Partially Delivered' ? 'bg-green-600' : 'bg-gray-200' %> flex items-center justify-center text-white">
                  <% if (order.orderStatus === 'Delivered' || order.orderStatus === 'Partially Delivered') { %>
                    <i class="bi bi-check-lg text-xl"></i>
                  <% } else { %>
                    <i class="bi bi-circle text-gray-400"></i>
                  <% } %>
                </div>
              </div>
              <div class="flex-1 pt-2">
                <h3 class="font-bold <%= order.orderStatus === 'Delivered' || order.orderStatus === 'Partially Delivered' ? 'text-gray-900' : 'text-gray-400' %>">
                  Delivered
                </h3>
                <p class="text-sm text-gray-600">
                  <% if (order.orderStatus === 'Delivered') { %>
                    Your order has been delivered successfully
                  <% } else if (order.orderStatus === 'Partially Delivered') { %>
                    Some items have been delivered
                  <% } else if (order.expectedDelivery) { %>
                    Expected by <%= new Date(order.expectedDelivery).toLocaleDateString('en-IN', { 
                      day: 'numeric', month: 'short', year: 'numeric' 
                    }) %>
                  <% } else { %>
                    Your order will be delivered soon
                  <% } %>
                </p>
                <% if (order.statusTimeline?.deliveredAt) { %>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= new Date(order.statusTimeline.deliveredAt).toLocaleString('en-IN', { 
                      day: 'numeric', month: 'short', year: 'numeric', 
                      hour: '2-digit', minute: '2-digit' 
                    }) %>
                  </p>
                <% } %>
              </div>
            </div>

          </div>
        </div>
      </div>

      <!-- Order Items -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">Items in this Order</h2>
        <div class="space-y-4">
          <% order.orderedItems.forEach(function(item) { %>
            <div class="flex gap-4">
              <div class="w-20 h-20 bg-gray-100 rounded-lg overflow-hidden flex-shrink-0">
                <img 
                  src="<%= item.variantId.images[0] %>" 
                  alt="<%= item.productId.name %>"
                  class="w-full h-full object-contain">
              </div>
              <div class="flex-1">
                <div class="flex justify-between items-start gap-2">
                  <h4 class="font-semibold text-gray-900"><%= item.productId.name %></h4>
                  <span class="px-2 py-1 rounded text-xs font-semibold <%= getItemStatusClass(item.itemStatus) %>">
                    <%= item.itemStatus.replace(/([A-Z])/g, ' $1').trim() %>
                  </span>
                </div>
                <p class="text-sm text-gray-600 mt-1">Quantity: <%= item.quantity %></p>
              </div>
            </div>
          <% }); %>
        </div>
      </div>

      <!-- Shipping Address -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-4">
          <i class="bi bi-geo-alt text-blue-600"></i> Delivery Address
        </h2>
        <div class="p-4 bg-gray-50 rounded-lg">
          <p class="font-semibold text-gray-900 mb-2"><%= order.shippingAddress.fullName %></p>
          <p class="text-gray-700 text-sm">
            <%= order.shippingAddress.address1 %><% if (order.shippingAddress.address2) { %>, <%= order.shippingAddress.address2 %><% } %><br>
            <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> - <%= order.shippingAddress.pincode %><br>
            <%= order.shippingAddress.country %>
          </p>
          <p class="text-gray-700 text-sm mt-2">
            <i class="bi bi-telephone"></i> <%= order.shippingAddress.phone %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%
function getStatusClass(status) {
  const statusClasses = {
    'Pending': 'bg-yellow-100 text-yellow-700',
    'Confirmed': 'bg-blue-100 text-blue-700',
    'Processing': 'bg-purple-100 text-purple-700',
    'Shipped': 'bg-indigo-100 text-indigo-700',
    'Out for Delivery': 'bg-cyan-100 text-cyan-700',
    'Delivered': 'bg-green-100 text-green-700',
    'Cancelled': 'bg-red-100 text-red-700',
    'Returned': 'bg-orange-100 text-orange-700'
  };
  return statusClasses[status] || 'bg-gray-100 text-gray-700';
}

function getItemStatusClass(status) {
  const statusClasses = {
    'Pending': 'bg-yellow-100 text-yellow-700',
    'Confirmed': 'bg-blue-100 text-blue-700',
    'Processing': 'bg-purple-100 text-purple-700',
    'Shipped': 'bg-indigo-100 text-indigo-700',
    'Out for Delivery': 'bg-cyan-100 text-cyan-700',
    'Delivered': 'bg-green-100 text-green-700',
    'Cancelled': 'bg-red-100 text-red-700',
    'ReturnRequested': 'bg-orange-100 text-orange-700',
    'ReturnRejected': 'bg-red-100 text-red-700',
    'ReturnApproved': 'bg-blue-100 text-blue-700',
    'Returned': 'bg-orange-100 text-orange-700'
  };
  return statusClasses[status] || 'bg-gray-100 text-gray-700';
}

function getProgressHeight(status) {
  const progress = {
    'Pending': 0,
    'Confirmed': 20,
    'Processing': 40,
    'Shipped': 60,
    'Out for Delivery': 80,
    'Delivered': 100,
    'Partially Delivered': 100
  };
  return progress[status] || 0;
}
%>

<!-- ================= SIGNUP FORM ================= -->
<main class="flex justify-center items-center py-16 px-4 min-h-[70vh]">
  <div class="bg-white border border-gray-200 rounded-2xl shadow-lg px-10 py-12 w-full max-w-md">

    <h2 class="text-center text-2xl font-bold text-gray-900 mb-8">
      Create your Mobiverse account
    </h2>

    <form id="registerForm" class="space-y-5" novalidate>

      <!-- Username -->
      <div>
        <label class="block font-semibold text-sm mb-1">Username</label>
        <input type="text" id="username"
          class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
        <p id="usernameError" class="text-red-500 text-xs mt-1 hidden"></p>
      </div>

      <!-- Email -->
      <div>
        <label class="block font-semibold text-sm mb-1">Email</label>
        <input type="email" id="email"
          class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
        <p id="emailError" class="text-red-500 text-xs mt-1 hidden"></p>
      </div>

      <!-- Password -->
      <div>
        <label class="block font-semibold text-sm mb-1">Password</label>
        <div class="relative">
          <input type="password" id="password"
            class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
          <button type="button"
            onclick="toggleSignupPassword('password','eyeOpen1','eyeClosed1')"
            class="absolute inset-y-0 right-3 flex items-center">
            <i id="eyeOpen1" class="bi bi-eye text-xl"></i>
            <i id="eyeClosed1" class="bi bi-eye-slash text-xl hidden"></i>
          </button>
        </div>
        <p id="passwordError" class="text-red-500 text-xs mt-1 hidden"></p>
      </div>

      <!-- Confirm Password -->
      <div>
        <label class="block font-semibold text-sm mb-1">Confirm Password</label>
        <div class="relative">
          <input type="password" id="confirmPassword"
            class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
          <button type="button"
            onclick="toggleSignupPassword('confirmPassword','eyeOpen2','eyeClosed2')"
            class="absolute inset-y-0 right-3 flex items-center">
            <i id="eyeOpen2" class="bi bi-eye text-xl"></i>
            <i id="eyeClosed2" class="bi bi-eye-slash text-xl hidden"></i>
          </button>
        </div>
        <p id="confirmPasswordError" class="text-red-500 text-xs mt-1 hidden"></p>
      </div>

      <!-- Referral -->
      <div>
        <label class="block font-semibold text-sm mb-1">
          Referral Code <span class="text-gray-400 text-xs">(Optional)</span>
        </label>
        <input type="text" id="referralCode"
          class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none">
        <p id="referralCodeError" class="text-red-500 text-xs mt-1 hidden"></p>
      </div>

      <!-- Terms -->
      <div class="flex items-center gap-3">
        <input type="checkbox" id="terms" class="w-4 h-4">
        <label class="text-sm text-gray-600">
          I agree to the
          <button type="button" id="open-terms-modal"
            class="text-blue-600 font-semibold hover:underline">
            Terms & Conditions
          </button>
        </label>
      </div>

      <!-- Submit -->
      <button id="registerBtn" type="submit"
        class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold text-lg hover:bg-blue-700 transition">
        Sign Up
      </button>
    </form>

    <p class="text-center text-gray-500 mt-6">
      Already have an account?
      <a href="/login" class="text-blue-600 font-semibold hover:underline">Log in</a>
    </p>

    <div class="flex items-center my-8 text-gray-400 text-sm">
      <span class="flex-1 border-t"></span>
      <span class="px-3">Or continue with</span>
      <span class="flex-1 border-t"></span>
    </div>

    <a href="/auth/google"
      class="flex items-center justify-center gap-3 border border-gray-300 bg-gray-50 hover:bg-gray-100 rounded-lg py-3 font-medium">
      <img src="https://developers.google.com/identity/images/g-logo.png" class="w-5">
      Sign in with Google
    </a>
  </div>
</main>


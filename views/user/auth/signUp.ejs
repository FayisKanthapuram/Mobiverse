<main class="flex justify-center items-center py-16 px-4 min-h-[70vh]">
  <div class="bg-white border border-gray-200 rounded-2xl shadow-lg px-10 py-12 w-full max-w-md">

    <h2 class="text-center text-2xl font-bold text-gray-900 mb-8">
      Create your Mobiverse account
    </h2>

    <form id="registerForm" class="space-y-5">

      <!-- Username -->
      <div>
        <label for="username" class="block font-semibold text-sm mb-1">Username</label>
        <input type="text" id="username" name="username" class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block font-semibold text-sm mb-1">Email</label>
        <input type="email" id="email" name="email" class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block font-semibold text-sm mb-1">Password</label>
        <div class="relative">
          <input type="password" id="password" name="password" class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
          <button type="button" onclick="toggleSignupPassword('password','eyeOpen1','eyeClosed1')" class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700">
            <i id="eyeOpen1" class="bi bi-eye text-xl"></i>
            <i id="eyeClosed1" class="bi bi-eye-slash text-xl hidden"></i>
          </button>
        </div>
      </div>

      <!-- Confirm Password -->
      <div>
        <label for="confirmPassword" class="block font-semibold text-sm mb-1">Confirm Password</label>
        <div class="relative">
          <input type="password" id="confirmPassword" name="confirmPassword" class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
          <button type="button" onclick="toggleSignupPassword('confirmPassword','eyeOpen2','eyeClosed2')" class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700">
            <i id="eyeOpen2" class="bi bi-eye text-xl"></i>
            <i id="eyeClosed2" class="bi bi-eye-slash text-xl hidden"></i>
          </button>
        </div>
      </div>

      <!-- Referral Code -->
      <div>
        <label class="block font-semibold text-sm mb-1">
          Referral Code <span class="text-gray-400 text-xs">(Optional)</span>
        </label>
        <input type="text" id="referralCode" name="referralCode" class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
      </div>

      <!-- Terms & Conditions -->
      <div class="flex items-center gap-3 mt-2">
        <input type="checkbox" id="terms" name="terms" required class="w-4 h-4">
        <label for="terms" class="text-sm text-gray-600">
          I agree to the
          <button type="button" class="text-blue-600 font-semibold hover:underline" id="open-terms-modal">
            Terms & Conditions
          </button>
        </label>
      </div>

      <!-- Submit -->
      <button id="registerBtn" type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold text-lg hover:bg-blue-700 transition">
        Sign Up
      </button>
    </form>

    <p class="text-center text-gray-500 mt-6">
      Already have an account?
      <a href="/user/login" class="text-blue-600 font-semibold hover:underline">Log in</a>
    </p>

    <!-- Divider -->
    <div class="flex items-center my-8 text-gray-400 text-sm">
      <span class="flex-1 border-t"></span>
      <span class="px-3">Or continue with</span>
      <span class="flex-1 border-t"></span>
    </div>

    <!-- Google Button -->
    <a href="/auth/google" class="flex items-center justify-center gap-3 border border-gray-300 bg-gray-50 hover:bg-gray-100 rounded-lg py-3 font-medium transition">
      <img src="https://developers.google.com/identity/images/g-logo.png" class="w-5">
      Sign in with Google
    </a>
  </div>
</main>


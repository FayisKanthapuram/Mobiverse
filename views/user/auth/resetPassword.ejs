<main class="flex justify-center items-center py-16 px-4 min-h-[70vh]">
  <div class="bg-white border border-gray-200 rounded-2xl shadow-lg px-10 py-12 w-full max-w-md">

    <h2 class="text-center text-2xl font-bold text-gray-900">Reset your password</h2>
    <p class="text-center text-gray-500 text-sm mt-1 mb-8">
      Enter a new password for your account.
    </p>

    <form id="registerForm" class="space-y-6">

      <!-- New Password -->
      <div>
        <label class="block font-semibold text-sm mb-1" for="password">New Password</label>
        <div class="relative">
          <input type="password" id="password" name="password" required class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg 
                   focus:ring-2 focus:ring-blue-500 outline-none" />
          <button type="button" onclick="toggleResetPassword('password','eyeOpen1','eyeClosed1')" class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700">
            <i id="eyeOpen1" class="bi bi-eye text-xl"></i>
            <i id="eyeClosed1" class="bi bi-eye-slash text-xl hidden"></i>
          </button>
        </div>
      </div>

      <!-- Confirm Password -->
      <div>
        <label class="block font-semibold text-sm mb-1" for="confirmPassword">Confirm New Password</label>
        <div class="relative">
          <input type="password" id="confirmPassword" name="confirmPassword" required class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg 
                   focus:ring-2 focus:ring-blue-500 outline-none" />
          <button type="button" onclick="toggleResetPassword('confirmPassword','eyeOpen2','eyeClosed2')" class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700">
            <i id="eyeOpen2" class="bi bi-eye text-xl"></i>
            <i id="eyeClosed2" class="bi bi-eye-slash text-xl hidden"></i>
          </button>
        </div>
      </div>

      <!-- Submit -->
      <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold text-lg hover:bg-blue-700 transition">
        Save New Password
      </button>
    </form>

  </div>
</main>
<main class="flex justify-center items-center py-16 px-4 min-h-[70vh]">
  <div class="bg-white border border-gray-200 rounded-2xl shadow-lg px-10 py-12 w-full max-w-md">

    <h2 class="text-center text-2xl font-bold text-gray-900">Forgot Password?</h2>
    <p class="text-center text-gray-500 text-sm mt-1 mb-8">
      Enter your registered email to receive an OTP.
    </p>

    <form id="registerForm" class="space-y-5">

      <!-- Email -->
      <div>
        <label for="email" class="block font-semibold text-sm mb-1">Email</label>
        <input type="text" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg 
                 focus:ring-2 focus:ring-blue-500 outline-none">
      </div>

      <!-- Send OTP Button -->
      <button type="submit" id="sendButton" class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold text-lg 
               hover:bg-blue-700 transition">
        Send OTP
      </button>

    </form>

  </div>
</main>
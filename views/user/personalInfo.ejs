
<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-4 py-8">
    <div class="flex gap-6">
      <!-- Sidebar -->
      <%- include('../partials/user/profile/sidebar', { pageTitle: pageTitle, user: user }) %>

      <!-- Main Content -->
      <div class="flex-1 bg-white rounded-lg shadow-sm p-8">
        <div class="flex justify-between items-center mb-8">
          <h1 class="text-2xl font-semibold text-gray-900">Personal Information</h1>
          <a href="/edit-info" class="text-blue-600 hover:text-blue-700 font-medium">
            <i class="bi bi-pencil"></i> Edit Info
          </a>
        </div>

        <!-- Profile Picture - Centered -->
        <div class="flex justify-center mb-12">
          <img src="<%= user.avatar %>" alt="<%= user.username %>" class="w-40 h-40 rounded-full object-cover border-4 border-gray-200 shadow-lg" onerror="this.onerror=null; this.src='/images/user-avatar.svg';">
        </div>

        <div class="space-y-6 max-w-2xl mx-auto">
          <!-- Username -->
          <div class="border-b border-gray-200 pb-6">
            <label class="block text-sm font-medium text-gray-700 mb-3">Username</label>
            <div class="px-4 py-3 bg-gray-50 rounded-lg border border-gray-200">
              <p class="text-gray-900"><%= user.username %></p>
            </div>
          </div>

          <!-- Email Address -->
          <div class="border-b border-gray-200 pb-6">
            <div class="flex justify-between items-center mb-3">
              <label class="block text-sm font-medium text-gray-700">Email</label>
              <% if (!user.googleId) { %>
                <a href="/edit-email" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                  <i class="bi bi-pencil"></i> Edit Email
                </a>
              <% } else { %>
                <span class="text-xs px-3 py-1 bg-blue-100 text-blue-700 rounded-full font-medium">
                  <i class="bi bi-google"></i> Google Account
                </span>
              <% } %>
            </div>
            <div class="px-4 py-3 bg-gray-50 rounded-lg border border-gray-200">
              <p class="text-gray-900"><%= user.email %></p>
            </div>
            <% if (user.googleId) { %>
              <p class="text-xs text-gray-500 mt-2">
                <i class="bi bi-info-circle"></i> Email cannot be changed for Google accounts
              </p>
            <% } %>
          </div>

          <!-- Password -->
          <div class="pb-6">
            <div class="flex justify-between items-center mb-3">
              <label class="block text-sm font-medium text-gray-700">Password</label>
              <% if (!user.googleId) { %>
                <a href="/change-password" class="text-sm text-blue-600 hover:text-blue-700 font-medium">
                  <i class="bi bi-shield-lock"></i> Change Password
                </a>
              <% } %>
            </div>
            <div class="px-4 py-3 bg-gray-50 rounded-lg border border-gray-200">
              <p class="text-gray-600">••••••••</p>
            </div>
            <% if (user.googleId) { %>
              <p class="text-xs text-gray-500 mt-2">
                <i class="bi bi-info-circle"></i> Password is managed by Google
              </p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

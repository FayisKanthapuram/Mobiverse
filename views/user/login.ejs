<main class="flex justify-center items-center py-16 px-4 min-h-[70vh]">
  <div class="bg-white border border-gray-200 rounded-2xl shadow-lg px-10 py-12 w-full max-w-md">

    <h2 class="text-center text-2xl font-bold text-gray-900 mb-8">
      Welcome back to Mobiverse
    </h2>

    <form id="loginForm" class="space-y-5">

      <!-- Email -->
      <div>
        <label class="block font-semibold text-sm mb-1" for="email">Email</label>
        <input 
          type="text" 
          id="email" 
          name="email"
          class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
        >
      </div>

      <!-- Password -->
      <div>
        <label class="block font-semibold text-sm mb-1" for="password">Password</label>

        <div class="relative">
          <input 
            type="password" 
            id="password" 
            name="password"
            class="w-full px-4 py-3 border border-gray-300 bg-gray-50 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none"
          >

          <!-- Eye Toggle -->
          <button 
            type="button" 
            onclick="toggleUserPassword()" 
            class="absolute inset-y-0 right-3 flex items-center text-gray-500 hover:text-gray-700"
          >
            <!-- Show Icon -->
            <i id="eyeOpenUser" class="bi bi-eye text-xl"></i>
            <!-- Hide Icon -->
            <i id="eyeClosedUser" class="bi bi-eye-slash text-xl hidden"></i>
          </button>
        </div>
      </div>

      <div class="text-right -mt-2">
        <a href="/forgotPassword" class="text-blue-600 text-sm font-medium hover:underline">
          Forgot Password?
        </a>
      </div>

      <button 
        type="submit"
        class="w-full bg-blue-600 text-white py-3 rounded-lg font-semibold text-lg hover:bg-blue-700 transition"
      >
        Login
      </button>
    </form>

    <p class="text-center text-gray-500 mt-6">
      Don't have an account? 
      <a href="/signup" class="text-blue-600 font-semibold hover:underline">Sign up</a>
    </p>

    <!-- Divider -->
    <div class="flex items-center my-8 text-gray-400 text-sm">
      <span class="flex-1 border-t"></span>
      <span class="px-3">Or continue with</span>
      <span class="flex-1 border-t"></span>
    </div>

    <!-- Google Button -->
    <a 
      href="/auth/google"
      class="flex items-center justify-center gap-3 border border-gray-300 bg-gray-50 hover:bg-gray-100 rounded-lg py-3 font-medium transition"
    >
      <img src="https://developers.google.com/identity/images/g-logo.png" class="w-5">
      Sign in with Google
    </a>

  </div>
</main>

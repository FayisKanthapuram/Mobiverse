<main class="container auth-container">
    <div class="auth-card">
        <h2>Create your Mobiverse account</h2>
        
        <form id="registerForm">
            <div class="form-group">
                <label for="name">Username</label>
                <input type="text" id="username" name="username">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword">
            </div>
            <div class="form-group">
                <label for="referralCode">Referral Code <span>(Optional)</span></label>
                <input type="text" id="referralCode" name="referralCode">
            </div>
            
            <div class="form-checkbox">
                <input type="checkbox" id="terms" name="terms" required>
                <label for="terms">
                    I agree to the 
                    <button type="button" class="auth-link-button" id="open-terms-modal">
                        Terms & Conditions
                    </button>
                </label>
            </div>
            
            <button type="submit" class="btn btn-primary btn-full-width" id="registerBtn">Sign Up</button>
        </form>
        
        <p class="auth-footer-link">
            Already have an account? <a href="/user/login" class="auth-link">Log in</a>
        </p>

        <div class="auth-divider">
            <span>Or continue with</span>
        </div>

        <a href="/user/auth/google" class="btn-google-signin">
            <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google logo">
            Sign in with Google
        </a>
        </div>
</main>


<% /* views/pages/home.ejs */ %>

<main class="container mx-auto px-4 mt-8">

  <section class="mb-12">
    <div id="hero-carousel" class="swiper w-full h-[450px] rounded-2xl overflow-hidden shadow-lg">
      <div class="swiper-wrapper">

        <div class="swiper-slide bg-gray-800 text-white">
          <div class="h-full flex flex-col md:flex-row items-center justify-between p-10 md:p-20">
            <div class="text-center md:text-left z-10 mb-6 md:mb-0">
              <h1 class="text-4xl md:text-5xl font-extrabold mb-4">
                <%= heroData?.title || 'SAMSUNG GALAXY S23 ULTRA 5G' %>
              </h1>
              <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-lg">
                <%= heroData?.subtitle || 'The Future in Your Hand. Order now and get exclusive launch offers.' %>
              </p>
              <a href="<%= heroData?.link || '/shop/s23-ultra' %>"
                class="bg-blue-600 text-white font-semibold px-8 py-3 rounded-lg text-lg hover:bg-blue-700 transition-colors">
                Shop Now
              </a>
            </div>
            <img src="<%= heroData?.image || '/images/s23-ultra-hero.png' %>"
              alt="Samsung Galaxy S23 Ultra" class="z-10 w-3/4 md:w-1/2 max-h-[300px] object-contain">
          </div>
        </div>

        <div class="swiper-slide bg-blue-700 text-white">
          <div class="h-full flex items-center justify-center text-center p-10">
            <div>
              <h2 class="text-4xl md:text-5xl font-extrabold mb-4">New Pixel 9 Pro</h2>
              <p class="text-lg md:text-xl text-blue-200 mb-8">The power of Google AI. In your pocket.</p>
              <a href="/shop/pixel-9-pro"
                class="bg-white text-blue-700 font-semibold px-8 py-3 rounded-lg text-lg hover:bg-gray-100 transition-colors">
                Learn More
              </a>
            </div>
          </div>
        </div>

      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </section>

  <% if (latestProducts?.length > 0) { %>
  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-6">Latest Launches</h2>

    <div id="latest-carousel" class="swiper w-full">
      <div class="swiper-wrapper pb-10">
        
        <% latestProducts.forEach(product => { %>
          <%- include('../partials/user/_productCard', {product: product}) %>
        <% }) %>

      </div>
      <div class="product-carousel-prev swiper-button-prev"></div>
      <div class="product-carousel-next swiper-button-next"></div>
    </div>
  </section>
  <% } %>

  <% if (featuredProducts?.length > 0) { %>
  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-6">Featured</h2>
    <div id="popular-carousel" class="swiper w-full">
      <div class="swiper-wrapper pb-10">

        <% featuredProducts.forEach(product => { %>
          <%- include('../partials/user/_productCard', {product}) %>
        <% }) %>
        
      </div>
      <div class="product-carousel-prev swiper-button-prev"></div>
      <div class="product-carousel-next swiper-button-next"></div>
    </div>
  </section>
  <% } %>

  <section class="mb-12 py-10 bg-white rounded-2xl shadow-sm">
  <h2 class="text-3xl font-bold mb-8 text-center">Top Brands</h2>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 px-6">
    <% brands.forEach(brand => { %>
      <a 
        href="/shop?brand=<%= brand.brandName %>" 
        class="flex justify-center items-center p-4 grayscale opacity-60 hover:grayscale-0 hover:opacity-100 hover:bg-gray-50 transition-all rounded-lg"
      >
        <img src="<%= brand.logo %>" alt="<%= brand.name %>" class="h-12">
      </a>
    <% }) %>
  </div>
</section>

  <section class="mb-12">
    <h2 class="text-3xl font-bold mb-8 text-center">Customer Reviews</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white p-6 rounded-xl shadow-md">
        <p class="text-gray-600 italic mb-4">"Great experience! My new phone arrived in just two days. Excellent
          service and authentic products."</p>
        <strong class="text-gray-900 font-semibold">- Sarah J.</strong>
      </div>
      <div class="bg-white p-6 rounded-xl shadow-md">
        <p class="text-gray-600 italic mb-4">"Found the best price for the S23 Ultra here. The website is easy to use
          and the checkout process was smooth."</p>
        <strong class="text-gray-900 font-semibold">- Mark L.</strong>
      </div>
      <div class="bg-white p-6 rounded-xl shadow-md">
        <p class="text-gray-600 italic mb-4">"I love my new Pixel! Mobiverse has a great selection of flagship phones.
          Will definitely shop here again."</p>
        <strong class="text-gray-900 font-semibold">- Emily K.</strong>
      </div>
    </div>
  </section>
</main>

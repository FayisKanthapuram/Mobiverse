<% /* views/partials/_productCard.ejs - Enhanced Design */ %>

<div class="swiper-slide h-auto">
  <a 
    href="/product/<%= product?.variants?._id %>" 
    class="block group h-full"
  >
    <div 
      class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden h-full relative border border-gray-100"
    >
      
      <!-- Image Section -->
      <div class="relative bg-gray-100 p-5 flex items-center justify-center h-56">
        <img 
          src="<%= product?.variants?.images[0] %>"
          alt="<%= product.name %>"
          class="h-full w-auto object-contain transition-all duration-300 group-hover:scale-105"
        />

        <!-- Wishlist -->
        <button 
          type="button"
          class="absolute top-4 right-4 bg-white w-11 h-11 rounded-full flex items-center justify-center text-gray-500 hover:text-red-500 shadow-md transition-all z-20"
          onclick="event.preventDefault(); event.stopPropagation(); addToWishlist('<%= product?.variants?._id %>')"
        >
          <i class="bi bi-heart text-xl"></i>
        </button>
      </div>

      <!-- Content Section -->
      <div class="px-5 pt-4 pb-20 relative">

        <!-- Product Name -->
        <h3 class="text-lg font-semibold text-gray-900 leading-tight line-clamp-1">
          <%= product.name %>
        </h3>

        <!-- Rating -->
        <div class="flex items-center mt-2">
          <% 
            const rating = product?.variants?.rating || 0;
            const full = Math.floor(rating);
            const half = (rating % 1) >= 0.5;
            const empty = 5 - full - (half ? 1 : 0);
          %>

          <% for (let i = 0; i < full; i++) { %>
            <i class="bi bi-star-fill text-yellow-400 text-sm"></i>
          <% } %>

          <% if (half) { %>
            <i class="bi bi-star-half text-yellow-400 text-sm"></i>
          <% } %>

          <% for (let i = 0; i < empty; i++) { %>
            <i class="bi bi-star text-yellow-400 text-sm"></i>
          <% } %>

          <span class="text-sm text-gray-500 ml-1">
            (<%= rating.toFixed(1) %>)
          </span>
        </div>

        <!-- Price Section -->
        <div class="mt-3">
          <p class="text-2xl font-bold text-gray-900 flex items-center gap-2">
            ₹<%= product?.variants?.salePrice?.toLocaleString('en-IN') %>
            <% if (product?.variants?.regularPrice) { %>
              <del class="text-gray-400 text-base">
                ₹<%= product?.variants?.regularPrice?.toLocaleString('en-IN') %>
              </del>
            <% } %>
          </p>
        </div>
      </div>

      <!-- Add to Cart Button (Improved Design) -->
      <button 
        type="button"
        class="absolute left-0 bottom-0 w-full bg-blue-600 text-white font-semibold py-3 rounded-b-2xl text-center transition-all duration-300 translate-y-full group-hover:translate-y-0"
        onclick="event.preventDefault(); addToCart('<%= product?.variants?._id %>')"
      >
        Add to Cart
      </button>

    </div>
  </a>
</div>

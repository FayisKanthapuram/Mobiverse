<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href="/user/home" class="flex items-center gap-2">
      <img src="/images/logo+name.png" alt="Mobiverse Logo" class="h-8" />
    </a>

    <div class="hidden md:flex items-center gap-6">
      <a href="/" class="text-base font-medium text-gray-700 hover:text-blue-600 transition-colors">Home</a>
      <a href="/brands" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Brands</a>
      <a href="/about" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">About Us</a>
      <a href="/contact" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Contact</a>
    </div>

    <div class="flex items-center gap-3">
      <input type="text" placeholder="Search..." class="px-4 py-2 w-full border border-gray-300 rounded-full text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" onkeyup="handleSearch(this.value)">
      <a href="/login" class="text-gray-500 hover:text-blue-600 transition-colors">
        <i class="bi bi-person text-2xl"></i>
      </a>
      <a href="/cart" class="text-gray-500 hover:text-blue-600 transition-colors relative">
        <i class="bi bi-cart text-2xl"></i>
      </a>

      <button id="mobile-menu-btn" class="md:hidden text-gray-600 text-2xl">
        <i class="bi bi-list"></i>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <div class="px-4 py-3 space-y-3">
      <a href="/" class="block text-base font-medium text-gray-700 hover:text-blue-600">Home</a>
      <a href="/brands" class="block text-base font-medium text-gray-500 hover:text-blue-600">Brands</a>
      <a href="/about" class="block text-base font-medium text-gray-500 hover:text-blue-600">About Us</a>
      <a href="/contact" class="block text-base font-medium text-gray-500 hover:text-blue-600">Contact</a>

      <form action="/search" method="GET" class="flex items-center pt-2">
        <input type="text" placeholder="Search..." class="w-full px-3 py-2 border border-gray-300 rounded-l-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500" />
        <button type="submit" class="px-3 py-2 bg-gray-100 text-gray-600 border border-l-0 border-gray-300 rounded-r-md hover:bg-gray-200">
          <i class="bi bi-search"></i>
        </button>
      </form>
    </div>
  </div>
</header>
<% /* views/partials/_breadcrumbs.ejs */ %>
<% if (typeof breadcrumbs !== 'undefined' && breadcrumbs.length) { %>
<nav class="text-sm text-gray-500" aria-label="Breadcrumb">
  <ol class="list-none p-0 inline-flex items-center">
    <% breadcrumbs.forEach((crumb, index) => { %>
    <li class="flex items-center">
      <% if (index < breadcrumbs.length - 1) { %>
        <% /* An active link for previous pages */ %>
        <a href="<%= crumb.link %>" class="hover:text-blue-600 hover:underline">
          <%= crumb.name %>
        </a>
        <span class="mx-2">/</span>
      <% } else { %>
        <% /* Plain text for the current page */ %>
        <span class="font-medium text-gray-700" aria-current="page">
          <%= crumb.name %>
        </span>
      <% } %>
    </li>
    <% }) %>
  </ol>
</nav>
<% } %>
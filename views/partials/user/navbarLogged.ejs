<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-3 flex justify-between items-center">

    <!-- Logo -->
    <a href="/home" class="flex items-center gap-2">
      <img src="<%= logoName %>" alt="Mobiverse Logo" class="h-8" />
    </a>

    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center gap-6">
      <a href="/home" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Home</a>
      <a href="/shop" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Shop</a>
      <a href="/about" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">About Us</a>
      <a href="/contact" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Contact</a>
    </div>

    <!-- Right Icons -->
    <div class="flex items-center gap-4">

      <!-- Desktop Search -->
      <div class="relative hidden md:block">
        <input
          value="<%= typeof query?.search !== 'undefined' ? query.search : '' %>"
          id="product-search-input"
          type="text"
          placeholder="Search..."
          class="px-4 py-2 pr-10 w-full border border-gray-300 rounded-full text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
          onkeyup="debounceSearch()"
        >
        <button
          id="clear-search-btn"
          class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600
          <%= query?.search ? '' : 'hidden' %>"
          onclick="clearSearch()"
        >
          <i class="bi bi-x-circle-fill text-lg"></i>
        </button>
      </div>

      <!-- Profile -->
      <a href="/personal-info" class="text-gray-500 hover:text-blue-600 transition-colors">
        <i class="bi bi-person text-2xl"></i>
      </a>

      <!-- Wishlist (Desktop) -->
      <a href="/wishlist" class="relative text-gray-500 hover:text-red-500 transition-colors">
        <i class="bi bi-heart text-xl"></i>

        <span
          class="absolute -top-2 -right-2 min-w-[18px] h-[18px] px-1
                bg-red-500 text-white text-[11px] font-semibold
                rounded-full flex items-center justify-center
                <%= wishlistCount > 0 ? '' : 'hidden' %>">
          <%= wishlistCount || 0 %>
        </span>
      </a>

      <!-- Cart -->
      <a href="/cart" class="text-gray-500 hover:text-blue-600 transition-colors">
        <i class="bi bi-cart text-2xl"></i>
      </a>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden text-gray-600 text-2xl">
        <i class="bi bi-list"></i>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden bg-white border-t border-gray-200 md:hidden">
    <div class="px-4 py-4 space-y-4">

      <a href="/home" class="block font-medium text-gray-700 hover:text-blue-600">Home</a>
      <a href="/shop" class="block font-medium text-gray-700 hover:text-blue-600">Shop</a>
      <a href="/about" class="block font-medium text-gray-700 hover:text-blue-600">About Us</a>
      <a href="/contact" class="block font-medium text-gray-700 hover:text-blue-600">Contact</a>

      <!-- Mobile Wishlist -->
      <a href="/wishlist" class="relative flex items-center gap-2 text-gray-700 hover:text-red-500">
        <i class="bi bi-heart text-xl"></i>
        <span>Wishlist</span>

        <% if (wishlistCount > 0) { %>
          <span
            class="absolute right-0 top-1/2 -translate-y-1/2
                   min-w-[18px] h-[18px] px-1
                   bg-red-500 text-white text-[11px] font-semibold
                   rounded-full flex items-center justify-center">
            <%= wishlistCount %>
          </span>
        <% } %>
      </a>

      <!-- Mobile Search -->
      <div class="relative pt-2">
        <input
          value="<%= typeof query?.search !== 'undefined' ? query.search : '' %>"
          id="product-search-input-mobile"
          type="text"
          placeholder="Search..."
          class="w-full px-3 py-2 pr-10 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500"
          onkeyup="debounceSearch()"
        />
        <button
          id="clear-search-btn-mobile"
          class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600
          <%= query?.search ? '' : 'hidden' %>"
          onclick="clearSearch()"
        >
          <i class="bi bi-x-circle-fill text-lg"></i>
        </button>
      </div>

    </div>
  </div>
</header>

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <nav class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href="/home" class="flex items-center gap-2">
      <img src="/images/logo+name.png" alt="Mobiverse Logo" class="h-8" />
    </a>

    <div class="hidden md:flex items-center gap-6">
      <a href="/home" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Home</a>
      <a href="/shop" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Shop</a>
      <a href="/about" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">About Us</a>
      <a href="/contact" class="text-base font-medium text-gray-500 hover:text-blue-600 transition-colors">Contact</a>
    </div>

    <div class="flex items-center gap-3">
      <input
        value="<%= typeof query.search !== 'undefined' ? query.search : '' %>"
        id="product-search-input"
        type="text"
        placeholder="Search..."
        class="px-4 py-2 w-full border border-gray-300 rounded-full text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        onkeyup="debounceSearch()"
      >
      <a href="/personal-info" class="text-gray-500 hover:text-blue-600 transition-colors">
        <i class="bi bi-person text-2xl"></i>
      </a>
      <a href="/cart" class="text-gray-500 hover:text-blue-600 transition-colors relative">
        <i class="bi bi-cart text-2xl"></i>
      </a>

      <button id="mobile-menu-btn" class="md:hidden text-gray-600 text-2xl">
        <i class="bi bi-list"></i>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <div class="px-4 py-3 space-y-3">
      <a href="/" class="block text-base font-medium text-gray-700 hover:text-blue-600">Home</a>
      <a href="/shop" class="block text-base font-medium text-gray-500 hover:text-blue-600">Shop</a>
      <a href="/about" class="block text-base font-medium text-gray-500 hover:text-blue-600">About Us</a>
      <a href="/contact" class="block text-base font-medium text-gray-500 hover:text-blue-600">Contact</a>

      <div class="flex items-center pt-2">
        <input
          value="<%= typeof query.search !== 'undefined' ? query.search : '' %>"
          id="product-search-input"
          type="text"
          placeholder="Search..."
          class="w-full px-3 py-2 border border-gray-300 rounded-l-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500"
          onkeyup="debounceSearch()"
        />
      </div>
    </div>
  </div>
</header>